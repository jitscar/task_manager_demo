<p id="notice"><%= notice %></p>

<h1><%= t('tasks.index.title') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('tasks.labels.name') %></th>
      <th><%= t('tasks.labels.description') %></th>
      <th><%= t('tasks.labels.state') %></th>
      <th><%= t('tasks.labels.user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.state %></td>
        <td><%= assigned_user(task.user) %></td>
        <td><%= link_to t('actions.show'), task %></td>
        <td><%= link_to t('actions.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('actions.destroy'), task, method: :delete, data: { confirm: t('actions.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('tasks.links.new'), new_task_path %>
